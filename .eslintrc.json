{
    "extends": [
        "next/core-web-vitals",
        "next/typescript"
    ],
    "ignorePatterns": [
        "src/components/ui/*.tsx",
        "next-env.d.ts"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "eol-last": [
            "error",
            "never"
        ],
        "react/display-name": "off",
        "import/no-anonymous-default-export": "off",
        "@typescript-eslint/consistent-type-imports": "error",
        "@typescript-eslint/no-unused-expressions": "off"
    }
}